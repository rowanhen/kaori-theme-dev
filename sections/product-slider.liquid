<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

{%- capture flickity_options -%}
  {
  "prevNextButtons": true,
                                                                                                                  "pageDots": true,
                                                                                                                  "contain": true,
                                                                                                                  "cellAlign": "center",
                                                                                                                  "groupCells": true,
                                                                                                                  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
                                                                                                                }{%- endcapture -%}

<div class="featured-collection-slider page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {%- assign collection = collections[section.settings.collection] -%}
  {%- assign product_limit = section.settings.product_count -%}

  <div class="products-carousel js-flickity" data-flickity='{{ flickity_options }}'>
    {% for product in collection.products limit: product_limit %}
      <div class="carousel-cell">
        <a href="{{ product.url | within: collection }}">
          <div class="product-image-wrapper">
            <div class="product-image-bg">
              <img class="img-explore" src="{{ product.featured_image | img_url: 'master'}}">
              <div class="product-info">
                <h4>
                  <strong>{{ product.title | upcase  }}</strong>
                </h4>
                <h5>
                  <strong>Shop Now</strong>
                </h5>
              </div>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .flickity-viewport {
    background: none;
    border: none;
  }
  .featured-collection-slider {
    padding-left: 55px;
    padding-right: 55px;
    max-width: 600px;
    margin: 0 auto 20px;
  }

  .carousel-cell {
    width: 100%; /* full width */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .carousel-cell:selection {
    background: none;
  }

  .flickity-button {
    border: none;
    background: none;
  }
  .flickity-button:disabled {
    pointer-events: all !important;
  }

  .flickity-button:hover {
    border: none;
    background: none;
  }

  .product-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-image-bg {
    background: #EA8D94;
    height: 300px;
    width: 300px;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .img-explore {
    margin-top: 60px;
    margin-left: 40px;
    width: 60%;
  }

  .product-info {
    font-size: 2rem;
    text-align: center;
    text-decoration: none !important;
  }
  .flickity-page-dots .dot {
    background: none;
    border: 1px solid #333;
  }

  @media screen and (max-width: 920px) {
    .featured-collection-slider {
      padding-left: 15px;
      padding-right: 15px;
    }
    .featured-collection-slider .carousel-cell {
      width: 50%;
    }
  }
  @media screen and (max-width: 767px) {
    .featured-collection-slider .carousel-cell {
      width: 100%;
    }
  }
</style>

{% schema %}
  {
    "name": "Collection Slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured Collection"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "product_count",
        "min": 4,
        "max": 12,
        "label": "Number of products to display",
        "default": 4
      }
    ],
    "presets": [
      {
        "category": "Collection",
        "name": "Collection Slider",
        "settings": {}
      }
    ]
  }
{% endschema %}