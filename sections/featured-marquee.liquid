{%- style -%}
  .marquee-wrapper {
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: 2rem;
    padding-bottom: 32px;
    background: rgb(var(--color-background));
  }

  .marquee__content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 2rem;
    min-width: 100%;
    word-break: break-word;
  }

  .marquee-individual-wrapper {
    max-width: 250px;
  }

  .marquee-image {
    width: 100%;
  }

  .marquee-text-wrapper {
    display: flex;
    flex-direction: column;
    align-items: space-between;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 2rem));
    }
  }

  /* Pause animation when reduced-motion is set */
  @media(prefers-reduced-motion: reduce) {
    .marquee__content {
      animation-play-state: paused !important;
    }
  }

  /* Enable animation */
  .marquee__content {
    animation: scroll 60s linear infinite;
  }

  /* Reverse animation */
  .marquee-wrapper--reverse .marquee__content {
    animation-direction: reverse;
  }

  /* Pause on hover */
  .marquee-wrapper--hover-pause:hover .marquee__content {
    animation-play-state: paused;
  }

  .section {}

  @media screen and (max-width: 750px) {
    .marquee-individual-wrapper {
      min-width: 150px;
    }
  }
{%- endstyle -%}

<div class="marquee-wrapper marquee-wrapper--reverse color-{{ section.settings.color_scheme }}">
  <div class="marquee__content">
    {%- for block in section.blocks -%}
      <div class="marquee-individual-wrapper">
        {{ block.settings.image | image_url: width: 1500 | image_tag:
         loading: 'lazy'
         , width: 100
         , class: 'marquee-image'
         , alt: section.settings.image.alt | escape
         }}
      </div>
    {%- endfor -%}
  </div>
  <div aria-hidden="true" class="marquee__content">
    {%- for block in section.blocks -%}
      <div class="marquee-individual-wrapper">
        {{ block.settings.image | image_url: width: 1500 | image_tag:
         loading: 'lazy'
         , width: 100
         , class: 'marquee-image'
         , alt: section.settings.image.alt | escape
         }}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "Featured marquee",
    "limit": 1,
    "max_blocks": 7,
    "settings": [
      {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "background-1",
            "label": "t:sections.all.colors.background_1.label"
          }, {
            "value": "background-2",
            "label": "t:sections.all.colors.background_2.label"
          }
        ],
        "default": "background-2",
        "label": "t:sections.all.colors.label"
      }
    ],
    "blocks": [
      {
        "type": "section",
        "name": "Image selector",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Some image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured marque",
        "blocks": [
          {
            "type": "section"
          }, {
            "type": "section"
          }
        ]
      }
    ]
  }
{% endschema %}